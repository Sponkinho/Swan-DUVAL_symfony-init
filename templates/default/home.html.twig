{% extends "base.html.twig" %}

{% block body %}

	<h1 class="text-center my-4 text-success">Filmothèque</h1>

	<div class="row">
		<div class="col-10 mx-auto">
			<table class="table table-hover">
				<thead class="table-dark">
					<tr>
						<th>#</th>
						<th>Titre</th>
						<th>Réalisateur</th>
						<th>Résumé</th>
						<th>Durée</th>
						<th>Année de Sortie</th>
						<th>Enregitré le:</th>
					</tr>
				</thead>
				<tbody>
					{% for film in films %}
						<tr>
							<td>{{ film.id }}</td>
							<td>{{ film.titre }}</td>
							<td>{{ film.realisateur }}</td>
							<td>{{ film.resume }}</td>
							<td>{{ film.duree }}</td>
							<td>{{ film.anneeSortie | date('d/m/Y')  }}</td>
							<td>{{ film.createdAt | date('d/m/Y') }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
